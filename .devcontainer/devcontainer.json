// For format details, see https://aka.ms/vscode-remote/devcontainer.json or this file's README at:
// https://github.com/microsoft/vscode-dev-containers/tree/v0.112.0/containers/typescript-node-12
{
	"name": "Node.js 12 & TypeScript",
	"dockerFile": "Dockerfile",

	// Set *default* container specific settings.json values on container create.
	"settings": { 
		"terminal.integrated.shell.linux": "/bin/bash"
	},

    // Add the IDs of extensions you want installed when the container is created in the array below.
    "extensions": [
		"dbaeumer.vscode-eslint",
		"ms-vscode.vscode-typescript-tslint-plugin",
		"streetsidesoftware.code-spell-checker",
        "eg2.vscode-npm-script",
        "christian-kohler.npm-intellisense"
	],

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	"forwardPorts": [3000],

	"mounts": [
        "source=react-planner-component-bashhistory,target=/commandhistory,type=volume",
        "source=react-planner-component-vscode-extensions-insiders,target=/home/node/.vscode-server-insiders/extensions,type=volume",
        "source=react-planner-component-vscode-extensions,target=/home/node/.vscode-server/extensions,type=volume"
    ],

	// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "yarn install",

	// Uncomment to connect as a non-root user. See https://aka.ms/vscode-remote/containers/non-root.
	"remoteUser": "node"
}